<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - www.MySite.com</title>
</head>
<body>
    <header>
        <div>Header</div>
        @await RenderSectionAsync("header", required: false)
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <!--Olması Zorunlu -->
            @RenderBody()
        </main>
    </div>

    <footer>
        <div>Footer</div>
        @await RenderSectionAsync("footer", required: false)
    </footer>
    
   
</body>
</html>
